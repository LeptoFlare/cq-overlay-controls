{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "minItems": 2,
  "maxItems": 2,
  "items": {
    "type": "object",
    "properties": {
      "name": {"type": "string"},
      "color": {"type": "string", "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"},
      "score": {"type": "number"}
    }
  },
  "default": [
    {
      "name": "Team A",
      "color": "#E36D60",
      "score": 0
    },
    {
      "name": "Team B",
      "color": "#2FB89A",
      "score": 0
    }
  ]
}
